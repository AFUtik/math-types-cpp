{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "clang build",
            "command": "g++.exe",
            "args": [
                "-std=c++17",
                "-g",
                "-O3",
                "${workspaceFolder}/src/utils/timer.cpp",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/main.exe",
                "-I${workspaceFolder}\\dependencies\\include", //include library .hpp / .h files
                "-L${workspaceFolder}\\dependencies\\64\\release\\lib",
                "-Wall",
                "-Wextra",
                "-Wno-unused-variable",
                "-Wno-unused-but-set-variable",
                "-Wno-unknown-pragmas",
                "-Wno-deprecated-declarations",
                "-Wformat-nonliteral", 
                "-Wcast-align",
                "-Wpointer-arith", 
                "-Wundef",
                "-Wwrite-strings", 
                "-Wno-unused-parameter"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}